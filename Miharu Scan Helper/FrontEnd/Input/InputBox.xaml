<UserControl x:Class="Miharu.FrontEnd.Input.InputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Miharu.FrontEnd.Input"
             mc:Ignorable="d" 
             ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="30" Height="30" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
		<Rectangle x:Name="BackgroundRectangle" Fill="Transparent" RadiusX="1" RadiusY="1" />
		<Label x:Name="ContentLabel" Content="日" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,-2,0,0" FontSize="24"/>
		<Rectangle x:Name="SelectedCircleRectangle" Fill="Transparent" Stroke="SlateGray" 
				   Width="32" Height="32"
				   Margin="-2"
				   RadiusX="16" RadiusY="16"
				   Visibility="Hidden" StrokeThickness="2"/>
	</Grid>
</UserControl>
